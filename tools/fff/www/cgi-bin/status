# build the response header first
echo "HTTP/1.1 200 OK"
echo "Content-Type: text/plain"
echo "Transfer-Encoding: chunked"
echo ""

# ... followed by the response body
HOME=$PWD/cgi-bin
NOBUF="stdbuf -i0 -o0 -e0"

$NOBUF cat $HOME/code
