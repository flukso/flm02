/**
 * Implementation of hook_nodeapi().
 */
function image_annotate_nodeapi(&$node, $op, $a3 = NULL, $a4 = NULL) {
  switch ($op) {
    case 'delete':
      db_query("DELETE FROM {image_annotate} WHERE nid = %d", $node->nid);
      break;
  }
}

